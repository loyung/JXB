@model  IEnumerable<Loyung.DBModels.USERA>
@{
    ViewBag.Title = "RoleList";
}
@Styles.Render("~/Css/Default")
@Scripts.Render("~/Script/Default")
@Scripts.Render("~/Script/validate")
@Scripts.Render("~/Script/layer")
@Scripts.Render("~/Script/BootPaginator")

<script type="text/javascript">
    $(function () {
        //查询搜索
        $("#btn_search").click(function () {
            var search_options = {
                url: '/UserManage/Role/RoleList',
                type: 'POST',
                data: $("#form_search").serialize(),
                success: function (msg) {
                    //异步刷新当前页
                    $.post('/UserManage/Role/GetRoleList', $("#form_search").formAppendJson({ id: $("#info_pid").val(), page: $("#current_page").val(), take: $("#take_page").val() }), function (data) {
                        $('#table_info').html(data);
                        //更新当前页和总页数
                        $('#boot_paginator').bootstrapPaginator({ currentPage: $("#current_page").val(), totalPages: $('#total_page').val() });

                    });
                },
            };
            $("#form_search").ajaxSubmit(search_options); return false;//防止原submit提交
        });
        //查询显示
        $("#btn_filter").click(function () {
            if ($("#search_form").is(":hidden")) {
                $("#search_form").show();
                $("#btn_filter").val("收起").toggleClass("active");
            }
            else {
                $("#search_form").hide();
                $('#form_search').resetForm();
                $("#btn_filter").val("筛选").toggleClass("active");
            }
        });
        //数据分页
        var page_options = {
            currentPage: $('#current_page').val(),
            totalPages: $('#total_page').val(),
            onPageClicked: function (event, originalEvent, type, page) {
                $.post('/UserManage/Role/GetRoleList', $("#form_search").formAppendJson({ page: page, take: $("#take_page").val() }), function (data) {
                    $('#table_info').html(data);
                    //更新当前页和总页数
                    $('#boot_paginator').bootstrapPaginator({ currentPage: $("#current_page").val(), totalPages: $('#total_page').val() });
                });
            },
        }
        //注册分页
        $('#boot_paginator').bootstrapPaginator(page_options);
        //新增字典类别
        $("#btn_add").click(function () {
            $('#form_add').resetForm();
            layer.open({ type: 1, title: '角色信息添加', content: $("#edit"), area: ['580px', '330px'] });
        });
    });
</script>

<div class="nav-bar">
    <div class="nav-link">
        <ul>
            <li class=" icon-home icon-2x  nav-home"></li>
            <li class="nav-li"><a href="javascript:void(0)">首页</a></li>
            <li class="icon-angle-right icon-2x nav-angle"></li>
            <li class="nav-li"><a href="javascript:void(0)">角色管理</a></li>
        </ul>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-5">
            <div class="btn-group" data-toggle="buttons">
                <label class="btn btn-primary" id="btn_add">
                    <input type="checkbox" autocomplete="off"> 新增
                </label>
                <label class="btn btn-primary" id="btn_filter">
                    <input type="checkbox" autocomplete="off"> 筛选
                </label>
            </div>
        </div>
    </div>
    <div class="row" id="search_form" style="display:none;">
        <form id="form_search">
            <div class="col-sm-2">
                <label for="search_RA001">角色名称：</label>
            </div>
            <div class="col-md-3"><input type="text" class="form-control" id="search_RA001" name="search_RA001" /></div>
            <div class="col-md-2"><input type="submit" class="btn btn-primary" id="btn_search" value="查询" /></div>
        </form>
    </div>
    <div id="table_info">
        @Html.Action("GetRoleList")
    </div>
    <!--分页-->
    <div id="boot_paginator">
    </div>
</div>